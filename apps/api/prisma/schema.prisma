  updatedAt        DateTime @updatedAt @map("updated_at")
  entidad          Entidad  @relation(fields: [entidadId], references: [id])
  tenant           Tenant   @relation(fields: [tenantId], references: [id])
  retiros          Retiro[]

  @@index([tenantId, activo])
  @@index([rut])
  @@index([entidadId])
  @@map("contactos")
